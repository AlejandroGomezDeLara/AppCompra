<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <AutoCompleteTextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:drawablePadding="5dp"
        android:drawableTint="@color/colorProducto"
        android:hint="Buscar productos"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:id="@+id/loading_indicator"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/navMenuBackgroundColor"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
                <TextView
                    android:id="@+id/emptyStateView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorProducto"
                    android:text="Empieza a a単adir productos a la lista!"
                    android:textSize="22dp"
                    />
            <Button
                android:id="@+id/a単adir_boton_centro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A単adir productos"
                android:textSize="18dp"
                android:layout_below="@+id/emptyStateView"
                android:layout_centerInParent="true"
                android:padding="8dp"
                android:background="@drawable/shape_naranja"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
            <Button
                android:id="@+id/a単adir_boton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:text="+"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="22dp"
                android:background="@drawable/shape_naranja"
                />
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>