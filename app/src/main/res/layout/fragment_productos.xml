<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_productos"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <AutoCompleteTextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edit_text_background"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/colorProducto"
            android:hint="Buscar productos"
            android:padding="10dp"
            android:layout_marginHorizontal="12dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Spinner
                android:id="@+id/spinner_categorias"
                android:layout_width="match_parent"
                android:spinnerMode="dropdown"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:backgroundTint="@color/colorProducto"
                >
            </Spinner>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ProgressBar
                android:id="@+id/loading_indicator"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/navMenuBackgroundColor"
                android:layout_centerInParent="true"
                android:paddingBottom="54dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/emptyStateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorProducto"
                android:text="No hay productos"
                android:textSize="18dp"
                android:paddingBottom="54dp"
                />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="12dp"
            android:layout_above="@+id/carrito"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:id="@+id/carrito"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                <TextView
                    android:id="@+id/textoCantidad"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorProducto"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:textSize="16dp"
                    android:text="Cantidad"/>
                <EditText
                    android:layout_centerVertical="true"
                    android:id="@+id/editTextCantidad"
                    android:layout_width="0dp"
                    android:layout_weight="0.20"
                    android:backgroundTint="@color/colorProducto"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/colorProducto"/>
                <Spinner
                    android:id="@+id/listasSpinner"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    >
                </Spinner>
                <Button
                    android:id="@+id/añadir_boton"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_centerVertical="true"
                    android:layout_height="38dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/shape_naranja"
                    android:text="añadir"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>