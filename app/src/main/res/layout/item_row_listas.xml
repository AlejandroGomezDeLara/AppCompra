<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        android:id="@+id/linearLista"
        android:background="@drawable/gradient"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:padding="8dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="0.75"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Esta es la fiesta de Adri"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="32dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        >

        <LinearLayout
            android:id="@+id/usuario1"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagen_usuario1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/shape_naranja"
                android:tint="@color/conectado" />

            <TextView
                android:id="@+id/nombre_usuario1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Adrianito"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

