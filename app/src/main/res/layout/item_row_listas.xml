<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        android:id="@+id/linearLista"
        android:background="@drawable/gradient_lista_participante"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        >
    <LinearLayout
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:gravity="center"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="Esta es la fiesta del adria"
                android:textColor="@android:color/white"
                android:textSize="28dp"
                android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/usuarios"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        >

        <LinearLayout
            android:id="@+id/usuario1"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagen_usuario1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_margin="2dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/shape_naranja"
                android:tint="@color/participante" />

            <TextView
                android:id="@+id/nombre_usuario1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Adrianito"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/usuario2"
            android:layout_width="0dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagen_usuario2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/shape_naranja"
                android:tint="@color/participante" />

            <TextView
                android:id="@+id/nombre_usuario2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Adrianito"
                android:layout_margin="2dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/usuario3"
            android:layout_width="0dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagen_usuario3"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_margin="2dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/shape_naranja"
                android:tint="@color/participante" />

            <TextView
                android:id="@+id/nombre_usuario3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Adrianito"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/usuario4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagen_usuario4"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_margin="2dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/shape_naranja"
                android:tint="@color/participante" />

            <TextView
                android:id="@+id/nombre_usuario4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Adrianito"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/numero_personas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="y 3 mÃ¡s"/>
    </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_weight="0.75"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/compartir"
                android:layout_gravity="center"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:tint="@android:color/white"
                android:src="@drawable/share"/>
            <ImageView
                android:id="@+id/borrar"
                android:layout_gravity="center"                android:layout_width="42dp"
                android:layout_height="42dp"
                android:tint="@android:color/white"
                android:src="@drawable/ic_delete_black_24dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>