<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="32dp"
    android:paddingHorizontal="18dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compartir Lista"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textColor="@color/colorProducto"
        android:layout_marginBottom="12dp"/>
    <AutoCompleteTextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce el usuario"
        android:textColorHint="@color/colorProducto"
        android:textColor="@color/colorProducto"
        android:completionThreshold="1"
        android:textAlignment="center"
        android:backgroundTint="@color/colorProducto"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Rol"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/colorProducto"
            android:layout_marginBottom="12dp"/>
        <Spinner
            android:id="@+id/spinnerRoles"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="28dp"
            android:background="@drawable/spinner_background"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            >
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginVertical="8dp"
        android:orientation="horizontal">
    <Button
        android:id="@+id/botonCancelarPopup"
        android:layout_weight="1"
        android:layout_marginHorizontal="6dp"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="@drawable/shape_naranja"
        android:text="Cancelar"/>
    <Button
        android:id="@+id/botonAceptarPopup"
        android:layout_weight="1"
        android:layout_marginHorizontal="6dp"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="@drawable/shape_naranja"
        android:text="Aceptar"/>
    </LinearLayout>
</LinearLayout>