<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="68dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_row_cardView"
    android:orientation="horizontal"
    app:cardCornerRadius="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="1dp"
    >

    <LinearLayout
        android:id="@+id/linearUsuario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/gradient_lista_participante"
        android:gravity="center">


        <TextView
            android:id="@+id/nombre_usuario"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:text="Manolito"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/backgroundColor"
            android:layout_marginHorizontal="8dp"/>
        <TextView
            android:id="@+id/texto_rol"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textSize="20dp"
            android:textStyle="italic"
            android:visibility="visible"
            />

        <Spinner
            android:id="@+id/roles"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/spinner_background_usuarios"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"></Spinner>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/borrar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete_black_24dp"
            android:tint="@color/backgroundColor"
            />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
