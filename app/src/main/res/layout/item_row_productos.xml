<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_row_cardView"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardBackgroundColor="#c40018"
    android:layout_margin="2dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imagen_producto"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_productos"
            android:tint="@color/backgroundColor"/>
        <TextView
            android:id="@+id/nombre_producto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Nombre del producto comercial o tipo"
            android:textStyle="bold"
            android:textSize="18dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
